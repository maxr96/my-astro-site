---
import DateFormatter from '../DateFormatter.astro';
import PostTitle from './PostTitle.astro';
import CoverImage from './CoverImage.astro';
import PostTag from './PostTag.astro';
import type { CoverImageType } from '../../types/post';

interface Props {
  title: string
  coverImage: CoverImageType
  pubDate: string
  tags: string
}

const {title, coverImage, pubDate, tags } = Astro.props;
---
<>
    <PostTitle title={title}></PostTitle>
    <div class="mb-8 md:mb-16 sm:mx-0">
        <CoverImage title={title} image={coverImage} />
    </div>
    <div class="max-w-9xl mx-auto">
        <div class="mb-6 text-lg">
            <DateFormatter dateString={pubDate} />
        </div>
        <div class="flex gap-x-2">
        {tags.split(',').map((tag) => (
            <PostTag tag={tag}></PostTag>
        ))}
        </div>
    </div>
</>