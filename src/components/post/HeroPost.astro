---
import CoverImage from '../post/CoverImage.astro'
import DateFormatter from '../DateFormatter.astro'
import type { CoverImageType } from '../../types/post'

interface Props {
  title: string
  coverImage: CoverImageType
  date: string
  excerpt: string
  slug?: string
  // category: string
}

const { title, coverImage, date, excerpt, slug } = Astro.props
---

<section>
    <div class="mb-8 md:mb-16">
      <CoverImage title={title} image={coverImage} slug={slug} />
    </div>
    <div class="md:grid md:grid-cols-2 md:gap-x-16 lg:gap-x-8 mb-20 md:mb-28">
      <div>
        <h3 class="mb-4 text-4xl lg:text-5xl leading-tight">
          <a class="hover:underline" href={slug} rel="prefetch">
            {title}
          </a>
        </h3>
        <div class="mb-4 md:mb-0 text-lg">
          <DateFormatter dateString={date} />
        </div>
      </div>
      <div>
        <p class="text-lg leading-relaxed mb-4">{excerpt}</p>
      </div>
    </div>
  </section>