---
import CoverImage from '../post/CoverImage.astro'
import DateFormatter from '../DateFormatter.astro'

interface Props {
    title: string
    coverImage: string
    date: string
    excerpt: string
    slug?: string
}

const {title, coverImage, date, excerpt, slug} = Astro.props
---

<div>
    <div class="mb-5">
      <CoverImage slug={slug} title={title} src={coverImage} />
    </div>
    <h3 class="text-3xl mb-3 leading-snug">
      <a class="hover:underline" href={slug}>
        {title}
      </a>
    </h3>
    <div class="text-lg mb-4">
      <DateFormatter dateString={date} />
    </div>
    <p class="text-lg leading-relaxed mb-4">{excerpt}</p>
  </div>
