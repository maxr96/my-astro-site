---
import type { CoverImageType } from '../../types/post';

interface Props {
    title: string
    image: CoverImageType,
    slug?: string
}

const {title, image, slug} = Astro.props;
---

<div class="sm:mx-0">
    <a aria-label={title} href={slug}>
        <img
            src={image.src}
            width={image.width}
            height={image.height}
            alt={`Cover Image for ${title}`}
            class="shadow-sm hover:shadow-lg transition-shadow duration-200 w-full"
        />
    </a>
</div>